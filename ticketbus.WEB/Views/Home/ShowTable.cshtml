@model IEnumerable<ticketbus.WEB.Models.RouteViewModel>


<table id="routes-table">
    <tr>
        <td>Заказ</td>
        <th>Пункт отправления</th>
        <th>Пункт прибытия</th>
        <th>Количество мест</th>
        <th>Время отправления</th>
        <th>Время прибытия</th>
    </tr>
    @foreach (var rout in Model)
    {
        <tr>
            <td><button class="order-button" routeId="@rout.Id" searchDate="@rout.DateForSearch">Купить</button></td>
            <td>@rout.StartPoint</td>
            <td>@rout.FinalPoint</td>
            <td>@rout.Seats</td>
            <td>@rout.DepartureTime</td>
            <td>@rout.ArrivalTime</td>
        </tr>

    }
</table>
<div id="not-login-message">Зарегистрируйтесь или войдите, чтобы купить билеты</div>
